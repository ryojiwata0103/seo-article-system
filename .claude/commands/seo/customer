    }

    const gid = args[0];
    console.log(`ğŸ“‹ é¡§å®¢æƒ…å ±: ${gid}`);
    
    try {
        const result = await seoCommands.customer(gid);
        if (result.success) {
            console.log(`âœ… é¡§å®¢æƒ…å ±å–å¾—å®Œäº†`);
            // é¡§å®¢ãƒ—ãƒ­ãƒ³ãƒ—ãƒˆã®å†…å®¹ã¯æ—¢ã«ã‚³ãƒ³ã‚½ãƒ¼ãƒ«ã«å‡ºåŠ›ã•ã‚Œã¦ã„ã‚‹
        } else {
            console.error(`âŒ é¡§å®¢æƒ…å ±å–å¾—å¤±æ•—: ${result.error}`);
