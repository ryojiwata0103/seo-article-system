#!/usr/bin/env node

/**
 * SEO Article Create Command
 * Usage: create [G-ID] [content-number]
 */

const path = require('path');
const fs = require('fs');

// SEOシステムのプロジェクトルートを決定
const SEO_SYSTEM_ROOT = process.env.SEO_SYSTEM_ROOT || 
    (fs.existsSync('/home/general/seo-article-system') ? '/home/general/seo-article-system' : 
     path.resolve(process.cwd(), 'seo-article-system'));

if (!fs.existsSync(SEO_SYSTEM_ROOT)) {
    console.error('❌ SEOシステムが見つかりません。');
    console.error('   まず setup コマンドを実行してください。');
    process.exit(1);
}

// SEOコマンドを動的にロード
const SEOCommands = require(path.join(SEO_SYSTEM_ROOT, 'tools', 'seo_commands.js'));
const seoCommands = new SEOCommands();

async function main() {
    const args = process.argv.slice(2);
    
    if (args.length < 2) {
        console.log(`
✍️ SEO Create コマンド

使用方法:
  create [G-ID] [コンテンツ番号]

例:
  create G0016374 01
  create G0016374 02
        `);
        process.exit(0);
    }

    const [gid, contentNumber] = args;
    console.log(`🎯 記事作成: G-ID=${gid}, コンテンツ=${contentNumber}`);
    
    try {
        const result = await seoCommands.create(gid, contentNumber);
        if (result.success) {
            console.log(`✅ 記事作成プロンプト生成完了`);
            console.log(`📄 プロンプトファイル: ${result.promptsPath}`);
            console.log(`📁 出力先: ${result.outputDir}`);
            console.log(`\n次のステップ:`);
            console.log(`  1. 生成されたプロンプトで記事を作成`);
            console.log(`  2. validate "/path/to/generated_article.md"`);
        } else {
            console.error(`❌ 記事作成失敗: ${result.error}`);
            process.exit(1);
        }
    } catch (error) {
        console.error(`❌ 実行エラー: ${error.message}`);
        process.exit(1);
    }
}

if (require.main === module) {
    main();
}