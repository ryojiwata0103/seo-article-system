// SEOã‚³ãƒãƒ³ãƒ‰ã‚’å‹•çš„ã«ãƒ­ãƒ¼ãƒ‰
const SEOCommands = require(path.join(SEO_SYSTEM_ROOT, 'tools', 'seo_commands.js'));
const seoCommands = new SEOCommands();

async function main() {
    const args = process.argv.slice(2);
    
    if (args.length < 2) {
        console.log(`
ğŸ¯ SEO Keywords ã‚³ãƒãƒ³ãƒ‰

ä½¿ç”¨æ–¹æ³•:
  keywords [G-ID] [ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ç•ªå·]

ä¾‹:
  keywords G0016374 01
  keywords G0016374 02
        `);
        process.exit(0);
    }

    const [gid, contentNumber] = args;
    console.log(`ğŸ¯ ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰æƒ…å ±: ${gid} - ã‚³ãƒ³ãƒ†ãƒ³ãƒ„${contentNumber}`);
    
    try {
        const result = await seoCommands.keywords(gid, contentNumber);
        if (result.success) {
            console.log(`âœ… ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰æƒ…å ±å–å¾—å®Œäº†`);
            // ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰æƒ…å ±ã¯æ—¢ã«ã‚³ãƒ³ã‚½ãƒ¼ãƒ«ã«å‡ºåŠ›ã•ã‚Œã¦ã„ã‚‹
        } else {
            console.error(`âŒ ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰æƒ…å ±å–å¾—å¤±æ•—: ${result.error}`);
            process.exit(1);
        }
    } catch (error) {
        console.error(`âŒ å®Ÿè¡Œã‚¨ãƒ©ãƒ¼: ${error.message}`);
